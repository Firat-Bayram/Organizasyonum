<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".menu_turnuva">
<!--    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"-->

<LinearLayout
    android:id="@+id/top_layover"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/blue_gradient"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <!-- <TextView
             style="@style/BlackText"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:gravity="center"
             android:text="@string/read_comments_title"
             android:textAppearance="?android:attr/textAppearanceLarge" />  -->
        <Button
            android:id="@+id/btnSetting"
            android:layout_width="30.5dp"
            android:layout_height="30.5dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/setting_button"
            android:onClick="btnSettingOnClick" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/logoo32x32"/>

       <Button
            android:id="@+id/btnRefresh"
            android:layout_width="30.5dp"
            android:layout_height="30.5dp"
            android:layout_toLeftOf="@+id/btnProfil"
            android:background="@drawable/feedback"
            android:onClick="btnRefreshOnClick" />


        <!--   <ImageButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/imageButton"
               android:src="@drawable/refresh"
               android:layout_centerVertical="true"
               android:layout_centerHorizontal="true" />     -->
        <Button
            android:id="@+id/btnProfil"
            android:layout_width="30.5dp"
            android:layout_height="30.5dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/profil_button"
            android:onClick="btnProfilOnClick" />

    </RelativeLayout>
</LinearLayout>

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@+id/top_layover"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnFutbol"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="futbol"
            android:background="@drawable/menu_futbol_button"/>

        <Button
            android:id="@+id/btnBasketbol"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="btnBasketbolOnClick"
            android:text="Basketbol"
            android:background="@drawable/menu_basketbol_button"/>

        <Button
            android:id="@+id/btnVolleybol"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="btnVolleybolOnClick"
            android:text="Voleybol"
            android:background="@drawable/menu_volleybol_button"/>
        <Button
            android:id="@+id/btnGolf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="btnGolfOnClick"
            android:text="Golf"
            android:background="@drawable/menu_golf_button"/>
        <Button
            android:id="@+id/btnTenis"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="btnTenisOnClick"
            android:text="Tenis"
            android:background="@drawable/menu_tenis_button"/>
        <Button
            android:id="@+id/btnMasaTenis"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="btnMasaTenisOnClick"
            android:text="Masa Tenisi"
            android:background="@drawable/menu_masatenisi_button"/>
        <Button
            android:id="@+id/btnBowling"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="btnBowlingOnClick"
            android:text="Bowling"
            android:background="@drawable/menu_bowling_button"/>
        <Button
            android:id="@+id/btnBilardo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="btnBilardoOnClick"
            android:text="Bilardo"
            android:background="@drawable/menu_bilardo_button"/>
        <Button
            android:id="@+id/btnHentbol"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="btnHentbolOnClick"
            android:text="Hentbol"
            android:background="@drawable/menu_handball_button"/>
        <Button
            android:id="@+id/btnYuzme"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="btnYuzmeOnClick"
            android:text="Yüzme"
            android:background="@drawable/menu_yuzme_button"/>
        <Button
            android:id="@+id/btnBisiklet"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="btnBisikletOnClick"
            android:text="Bisiklet"
            android:background="@drawable/menu_bisiklet_button"/>
        <Button
            android:id="@+id/btnKoşu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="btnKoşuOnClick"
            android:text="Koşu"
            android:background="@drawable/menu_kosu_button"/>
        <Button
            android:id="@+id/btnSatranc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="btnSatrancOnClick"
            android:text="Satranç"
            android:background="@drawable/menu_satranc_button"/>

        <Button
            android:id="@+id/btnTavla"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="btnTavlaOnClick"
            android:text="Tavla"
            android:background="@drawable/menu_tavla_button"/>


    </LinearLayout>
</ScrollView>
</RelativeLayout>
